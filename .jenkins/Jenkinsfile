#!groovy
pipeline {
    agent { label 'pcsgs05' }
    stages {
        stage('checkout') {
            steps {
                dir('plssvm') {
                    checkout scm
                }
            }
        }
        stage('setup python'){
            sh '''
                /usr/bin/python3.8 -m pip install --user arff
                /usr/bin/python3.8 -m pip install --user pandas
            '''
        }
        stage('build plssvm') {
            steps {
                dir('plssvm') {
                    sh '''
                        module load cuda
                        echo $PWD
                        cd SVM
                        mkdir -p build/Release
                        cd build/Release
                        /import/sgs.scratch/vancraar/spack/opt/spack/linux-ubuntu20.04-cascadelake/clang-12.0.0/cmake-3.20.2-z3urlvzqm5igtwxj25nnd5olciuq7ayb/bin/cmake -DCMAKE_BUILD_TYPE=Relese ../../
                        make -j4
                    '''
                }
            }
        }
        stage('run tests') {
            steps {
                dir('plssvm') {
                    sh '''
                        module load cuda
                        cd SVM/build/Release
                        ctest -j4
                    '''
                }
            }
        }
    }
}